# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.poker()
GET		/poker						controllers.Application.poker()
GET     /game                       controllers.Application.pokerGame()
GET     /help                       controllers.Application.pokerHelp()
GET     /about                      controllers.Application.pokerAbout()


GET		/player/:name				controllers.Application.addPlayer(name: String)
GET		/players					controllers.Application.getPlayers()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)